<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPlus"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_tab_plus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="3dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/clPlus"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llMyRewards"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_my_rewards"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_my_rewards"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llNewLaunch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_new_launch"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_new_launch"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llMyCoupon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_my_coupon"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_my_coupon"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llPromotionOffer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_promotions_offers"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_promotions_offers"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llMeetPeople"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_meet_people"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_meet_people"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llEventArea"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_event_area"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_event_area"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llViewCategories"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_view_categories"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_view_by_category"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llBuyAgain"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_buy_again"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_buy_again"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llYourOrder"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_your_order"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_your_order"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llMyPromotion"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_my_promotion"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_my_promotion"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llSetLanguage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_set_language"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_set_language"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llShareFriends"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_share_friends"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_share_friends"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llSettings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_settings"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_settings"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llMyProfile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_my_profile"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_my_profile"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/llContactUs"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/ic_contact_us"
                            android:layout_marginTop="15dp"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_contact_us"
                            android:textAllCaps="false"
                            android:fontFamily="@font/markformc"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:textColor="#3a3a3a"
                            android:letterSpacing="0.09"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
                
            </androidx.appcompat.widget.LinearLayoutCompat>
            
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>