<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="26dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="16dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/layout_toolbar"
                    />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="85dp"
                            android:fontFamily="@font/markformc_medium"
                            android:lineSpacingExtra="5dp"
                            android:text="Congratulation High-Flyer !!"
                            android:textAlignment="center"
                            android:textColor="@color/accent_blue"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/markformc_medium"
                            android:layout_marginTop="26dp"
                            android:lineSpacingExtra="5dp"
                            android:text="Let us complete your High-Flyer registration and add wings to your Business"
                            android:textAlignment="center"
                            android:textColor="#f05a28"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvHeader" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/markformc"
                            android:layout_marginTop="26dp"
                            android:lineSpacingExtra="5dp"
                            android:text="This is paid service Rs. 200/- would be charged to you as monthly subscription. You can cancel this subscription anytime as per your wish, but we recommend you to renew your subscription as business take sometime to setup."
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rs. 200 monthly subscription"
                            android:fontFamily="@font/markformc_medium"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:textColor="#4c4c4c"
                            android:padding="10dp"
                            app:strokeColor="@color/accent_blue"
                            app:strokeWidth="1dp"
                            app:cornerRadius="8dp"
                            android:layout_marginTop="33dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvOR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OR"
                            android:fontFamily="@font/markformc_medium"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="9dp"
                            android:textColor="#4c4c4c"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/buttonMonthly"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonYearly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rs. 2000 annual subscription"
                            android:fontFamily="@font/markformc_medium"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:layout_marginTop="9dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:textColor="#4c4c4c"
                            android:padding="10dp"
                            app:strokeColor="@color/accent_blue"
                            app:strokeWidth="1dp"
                            app:cornerRadius="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvOR"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>