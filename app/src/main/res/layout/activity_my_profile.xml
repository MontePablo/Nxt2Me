<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDesc"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_hire_delivery_boy"
            android:elevation="4dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMyShopLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_nxt_2_me_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_my_profile"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#404042"
                android:lineSpacingExtra="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="17dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_settings_card"
            app:layout_constraintTop_toBottomOf="@id/clDesc"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_name"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#404042"
                android:letterSpacing="0.11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                />

            <EditText
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:id="@+id/tvNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_delivery_boy_name"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#232323"
                android:letterSpacing="0.11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvName"
                android:layout_marginStart="88dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_mobile_number"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#404042"
                android:letterSpacing="0.11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:id="@+id/tvMobileNumberValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_mobile_number_value"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#232323"
                android:letterSpacing="0.11"
                app:layout_constraintTop_toBottomOf="@id/tvNameValue"
                app:layout_constraintStart_toEndOf="@id/tvMobileNumber"
                android:layout_marginStart="18dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSocietyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_society_name"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#404042"
                android:letterSpacing="0.11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@id/tvMobileNumber"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:id="@+id/tvSocietyNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_society_name_value"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#232323"
                android:letterSpacing="0.11"
                app:layout_constraintTop_toBottomOf="@id/tvMobileNumberValue"
                app:layout_constraintStart_toEndOf="@id/tvSocietyName"
                android:layout_marginStart="29dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFlatNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_flat_number"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#404042"
                android:letterSpacing="0.11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@id/tvSocietyName"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:id="@+id/tvFlatNumberValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_flat_number_value"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#232323"
                android:letterSpacing="0.11"
                app:layout_constraintTop_toBottomOf="@id/tvSocietyNameValue"
                app:layout_constraintStart_toEndOf="@id/tvFlatNumber"
                android:layout_marginStart="36dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivEditLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_edit_your_location"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@id/tvFlatNumber"
                android:layout_marginTop="24dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEditLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_edit_your_location"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#00adee"
                android:letterSpacing="0.11"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvFlatNumber"
                android:layout_marginTop="23dp"
                app:layout_constraintStart_toEndOf="@id/ivEditLocation"
                android:layout_marginStart="10dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReferralCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_my_referral_code"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#404042"
                android:letterSpacing="0.11"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@id/ivEditLocation"
                android:layout_marginTop="21dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReferralCodeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_referral_code_value"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="#eb008b"
                android:letterSpacing="0.11"
                app:layout_constraintTop_toBottomOf="@id/ivEditLocation"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toEndOf="@id/tvReferralCode"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_share"
                app:layout_constraintTop_toBottomOf="@id/ivEditLocation"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@id/tvReferralCodeValue"
                android:layout_marginStart="8dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReferralDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_referral_desc_1"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#717171"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintTop_toBottomOf="@id/tvReferralCode"
                android:layout_marginTop="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_referral_desc_2"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="#717171"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvReferralDesc"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_close"
                android:fontFamily="@font/markformc_medium"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#ec1d24"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:strokeColor="@color/text_raise_complaint"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="25dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_edit"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                app:backgroundTint="@color/accent_blue"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toTopOf="@id/buttonClose"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="80dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>