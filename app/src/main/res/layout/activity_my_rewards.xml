<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDesc"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_dashboard_header"
            android:elevation="2dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMyShopLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_nxt_2_me_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_my_rewards"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#404042"
                android:lineSpacingExtra="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivMyShopLogo"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_my_rewards_card"
            app:layout_constraintTop_toBottomOf="@id/clDesc"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="@id/cl2"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvJoiningBonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_joining_bonus"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="27dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv20pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_20_pt"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#00a550"
                android:lineSpacingExtra="2sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@id/tvJoiningBonus"
                android:layout_marginStart="30dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvReach500"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_reach_500"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#292929"
                android:lineSpacingExtra="6sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="@id/tv20pt"
                app:layout_constraintTop_toBottomOf="@id/tvJoiningBonus"
                android:layout_marginTop="10dp"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlUpiId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/markformc"
                android:hint="@string/lbl_enter_upi_id"
                android:textColorHint="@color/hint_color"
                style="@style/Widget.Design.TextInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="11dp"
                app:layout_constraintTop_toBottomOf="@id/tvReach500"
                android:layout_marginTop="20dp"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUpiId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/markformc"
                    android:textColorHint="@color/secondary_text_color"
                    android:textColor="@color/primary_text_color"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:paddingBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRedeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_redeem"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:cornerRadius="8dp"
                app:backgroundTint="#dcdcdc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tlUpiId"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_my_rewards_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/cl1"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            android:elevation="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvActive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_active_participation"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabelEncashedPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_encashed_points"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvActive"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEncashedPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_amount"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_bold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#00a550"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvActive"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabelSavedPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_saved_on_purchase"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvLabelEncashedPoints"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSavedPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_amount"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_bold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#00a550"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvEncashedPoints"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLabelEarningHighFlyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_earning_from_high_flyer"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvLabelSavedPurchase"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEarningHighFlyer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_amount"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_bold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#00a550"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvSavedPurchase"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_details"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:cornerRadius="8dp"
                app:backgroundTint="#dcdcdc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLabelEarningHighFlyer"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>