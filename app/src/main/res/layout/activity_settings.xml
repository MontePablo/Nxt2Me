<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDesc"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_hire_delivery_boy"
            android:elevation="2dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMyShopLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_logo_nxt_2_me_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_settings"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#404042"
                android:lineSpacingExtra="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="17dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_settings_card"
            app:layout_constraintTop_toBottomOf="@id/clDesc"
            android:layout_marginTop="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_notifications"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="21dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShopStatusActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_shop_status_active"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivShopStatusDeactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_shop_status_deactive"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                android:visibility="gone"
                />

            <View
                android:id="@+id/vLineNotification"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="63dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResetPassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/lbl_reset_password"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:paddingTop="19dp"
                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vLineNotification"
                app:layout_constraintBottom_toTopOf="@id/vLineResetPassword"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right"
                app:layout_constraintTop_toBottomOf="@id/vLineNotification"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="26dp"
                />

            <View
                android:id="@+id/vLineResetPassword"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/vLineNotification"
                android:layout_marginTop="60dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTnC"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/lbl_tnc"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:paddingTop="19dp"
                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vLineResetPassword"
                app:layout_constraintBottom_toTopOf="@id/vLineTnC"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right"
                app:layout_constraintTop_toBottomOf="@id/vLineResetPassword"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="26dp"
                />

            <View
                android:id="@+id/vLineTnC"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/vLineResetPassword"
                android:layout_marginTop="60dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFAQ"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/lbl_faq"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:paddingTop="19dp"
                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vLineTnC"
                app:layout_constraintBottom_toTopOf="@id/vLineFAQ"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right"
                app:layout_constraintTop_toBottomOf="@id/vLineTnC"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="26dp"
                />

            <View
                android:id="@+id/vLineFAQ"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/vLineTnC"
                android:layout_marginTop="60dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvKnowApplication"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/lbl_know_your_application"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:paddingTop="19dp"
                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vLineFAQ"
                app:layout_constraintBottom_toTopOf="@id/vLineKnowApplication"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right"
                app:layout_constraintTop_toBottomOf="@id/vLineFAQ"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="26dp"
                />

            <View
                android:id="@+id/vLineKnowApplication"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/vLineFAQ"
                android:layout_marginTop="60dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/logout"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:paddingTop="19dp"
                android:paddingStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vLineKnowApplication"
                app:layout_constraintBottom_toTopOf="@id/vLineLogout"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right"
                app:layout_constraintTop_toBottomOf="@id/vLineKnowApplication"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="26dp"
                />

            <View
                android:id="@+id/vLineLogout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="9dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toBottomOf="@id/vLineKnowApplication"
                android:layout_marginTop="60dp"
                />



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAppVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_version"
                android:textAllCaps="false"
                android:fontFamily="@font/markformc_medium"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#292929"
                android:lineSpacingExtra="4sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>