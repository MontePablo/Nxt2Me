<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonHireDeliveryBoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_hire_delivery_boy"
            android:fontFamily="@font/markformc_medium"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:backgroundTint="@color/accent_blue"
            app:cornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentOrderList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/buttonHireDeliveryBoy"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>