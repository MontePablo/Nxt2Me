<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIntro2a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_registration_intro_2a"
        android:fontFamily="@font/markformc"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#eb008b"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIntro2b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_registration_intro_2b"
        android:fontFamily="@font/markformc"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#484848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIntro2a"
        android:layout_marginTop="1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>